<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/furnitureNameACTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.Text.Headline2.Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vitra DAW" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/furnitureDescriptionACTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier=".7"
        android:maxLines="3"
        android:textAppearance="@style/AppTheme.Text.Paragraph1.LightGrey"
        app:layout_constraintEnd_toEndOf="@+id/furnitureNameACTV"
        app:layout_constraintStart_toStartOf="@+id/furnitureNameACTV"
        app:layout_constraintTop_toBottomOf="@id/furnitureNameACTV"
        tools:text="Lorem Impsum" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/furniturePreviewRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginBottom="@dimen/size_15"
        app:layout_constraintBottom_toTopOf="@+id/buyMB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/furnitureDescriptionACTV" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/furniturePreviewProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/furniturePreviewRV"
        app:layout_constraintEnd_toEndOf="@+id/furniturePreviewRV"
        app:layout_constraintStart_toStartOf="@+id/furniturePreviewRV"
        app:layout_constraintTop_toTopOf="@+id/furniturePreviewRV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/furniturePriceACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.Text.Headline2.Black"
        app:layout_constraintStart_toStartOf="@+id/furniturePreviewRV"
        app:layout_constraintTop_toTopOf="@+id/furniturePreviewRV"
        tools:text="$450" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyMB"
        style="@style/AppTheme.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_15"
        android:elevation="@dimen/size_5"
        android:text="@string/buy_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/furnitureNameACTV"
        app:layout_constraintStart_toStartOf="@+id/furnitureNameACTV" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>