<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/window_background</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:fontFamily">@font/teko_light</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="AppTheme.Text.Bold" parent="AppTheme.Text">
        <item name="android:fontFamily">@font/teko_bold</item>
    </style>

    <style name="AppTheme.Text.Headline1.Black" parent="AppTheme.Text.Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="AppTheme.Text.Headline2.Black" parent="AppTheme.Text.Bold">
        <item name="android:textColor">@color/black</item>
